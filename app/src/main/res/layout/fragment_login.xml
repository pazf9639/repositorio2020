<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginPageBackgroundColor"
    tools:context=".gui.components.LoginFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingTop="16dp">
        <ImageView
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:id="@+id/imgLogo"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="16dp"
            app:tint="?android:attr/textColorPrimary"
            android:src="@drawable/ic_logo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="80dp"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.Ebony.TextInputLayout.HintText"
            android:id="@+id/slogan"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Ebony.TextInputLayout"
            android:hint="Username"
            android:id="@+id/user_name_text_input"/>
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:textColorHighlight="@color/colorControlActivated"
                android:id="@+id/username_editText">


            </com.google.android.material.textfield.TextInputEditText>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Ebony.TextInputLayout"
            android:hint="Password"
            android:id="@+id/password_text_input">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:textColorHighlight="@color/colorControlActivated"
                android:id="@+id/password_editText"/>
        </com.google.android.material.textfield.TextInputLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_buton"
        style="@style/Widget.Ebony.Button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Iniciar Sesion"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel_buton"
        style="@style/Widget.Ebony.Button.TextButton"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/next_buton"
        android:layout_toLeftOf="@+id/next_buton"
        android:text="cancelar"/>


</RelativeLayout>

    </LinearLayout>

</ScrollView>